             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="My_Test.MainPage">

    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Spacing="30">

        <!-- Заголовок -->
        <Label Text="Где Мы гуляем!"
