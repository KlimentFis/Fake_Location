                   Padding="15"
                   TextColor="DarkGray"
                   FontSize="30" />

        <!-- Местоположение -->        
        <Label Text="{Binding FakeLocation}"
                   FontSize="35"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />
        
        <Label Text="Отмазки:"
                   FontSize="25"
                   TextColor="DarkGray"
                   HorizontalTextAlignment="Center" />

        <StackLayout
                     HorizontalOptions="CenterAndExpand">
            <Label Text="Тут будут отмазки...."
                   FontSize="20"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center" />
            <Label Text="Тут будут отмазки...."
                   FontSize="20"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center" />
            <Label Text="Тут будут отмазки...."
                   FontSize="20"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />
            <Label Text="Тут будут отмазки...."
                   FontSize="20"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center" />
            <Label Text="Тут будут отмазки...."
                   FontSize="20"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center" />
        </StackLayout>

    </StackLayout>
</ContentPage>
